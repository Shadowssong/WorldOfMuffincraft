-# = @char_name
-# = @realm
-# = @character
%div{:style => "display: block; width: 992px; height: 773px; background-image: url(#{get_background}); margin: 0px auto; color: white"}
  %div{:style => "display: inline-block; width: 100%; height: 110px; overflow: hidden "}
    %div{:style => "display: inline-block; width: 40%; height: 100%; position: relative; float: left "}
      %div{:style => "display: inline-block; width: 100%; height: 60%; "}
        %div{:style => "display: inline-block; width: 60%; height: 100%;  "}
          = @character.name
        %div{:style => "display: inline-block; width: 40%; height: 100%; float: right "}
          %div{:style => "display: inline-block; width: 100%; height: 50%;  "}
            = @title
          %div{:style => "display: inline-block; width: 100%; height: 50%;  "}
            = get_guild 
      %div{:style => "display: inline-block; width: 100%; height: 40%;  "}
        = build_stats_string
    %div{:style => "display: inline-block; width: 40%; height: 100%; position: relative; float: left "}
    %div{:style => "display: inline-block; width: 20%; height: 100%; position: relative; float: left "}
      %div{:style => "display: inline-block; width: 50%; height: 100%; float: left "}
        = @character.get_items['averageItemLevel']
      %div{:style => "display: inline-block; width: 50%; height: 100%; float: right "}
        %div{:style => "display: inline-block; width: 100%; height: 50%; "}
          average item level
        %div{:style => "display: inline-block; width: 100%; height: 50%; "}
          = "(#{@character.get_items['averageItemLevelEquipped']} equipped)"
  %div{:style => "display: inline-block; width: 95%; height: 900px; overflow: hidden "}
    %div{:style => "display: inline-block; width: 182px; height: 100%; position: relative; float: left"}
      %div{:style => "display: inline-block; width: 100%; height: 10%; position: relative; float: left; "}
        = @character.achievement_points
      %div{:style => "display: inline-block; width: 100%; height: 90%; position: relative; float: left; "}
        %div{:style => "display: inline-block; width: 200px; height: 400px; position: relative; float: left; padding-left: 10px"}
          - @nav_bar.each do |nav_item|
            %ul{:style => "list-style: none" }
              %li= link_to nav_item
    %div{:style => "display: inline-block; width: 740px; height: 550px; position: relative; float: left; background-image: url(#{get_profile_main});"}
      %div{:style => "display: inline-block; width: 15%; height: 100%; position: relative; float: left; "}
        -@left_column_gear.each do |gear|
          %ul{:style => "list-style: none; padding-left: 20px; padding-top: 5px" }
            %li= image_tag "http://media.blizzard.com/wow/icons/56/inv_helm_mail_draenordungeon_c_01.jpg", {:style => "border-radius: 10px"} 
      %div{:style => "display: inline-block; width: 70%; height: 100%; position: relative; float: left; "}
        %div{:style => "display: inline-block; width: 100%; height: 550px; position: relative; float: left; "}
        %div{:style => "display: inline-block; width: 100%; position: relative; float: left; margin-left: 200px"}
          -@mainhand.each do |gear|
            %ul{:style => "list-style: none; padding: 20px 20px; display: inline; " }
              %li{:style => "display: inline"}= image_tag "http://media.blizzard.com/wow/icons/56/inv_bow_1h_draenorhonor_c_01.jpg", {:style => "border-radius: 10px; display: inline"} 
      %div{:style => "display: inline-block; width: 15%; height: 100%; position: relative; float: left; "}
        -@right_column_gear.each do |gear|
          %ul{:style => "list-style: none; padding-left: 20px; padding-top: 5px" }
            %li= image_tag "http://media.blizzard.com/wow/icons/56/inv_helm_mail_draenordungeon_c_01.jpg", {:style => "border-radius: 10px"} 
